.wrapper
	= render 'shared/side_bar'
	.main-contents
		.header
			%h2.header__groupname= @group.name
			.header__member
				%p.header__member__title Memberï¼š
				%ul.header__member__list
					- @users.each do |user|
						%li.header__member__list__membername= user.name
			= link_to "Edit", "" , class: "header__edit"
		.messages
			- (1..10).each do |i|
				.message
					.message__title
						%p.message__title__username testuser#{i}
						%p.message__title__timestamp 2019/07/13(Sat) 17:30:45
					%p.message__text testmessage#{i}
		= form_for([@group, Message.new], class: "input-form") do |f|
			%input.input-form__input-area{:type => "text", :placeholder => "type a message"}
			%label.input-form__fileselect-label{:for => "fileselect"}
				%i.far.fa-image.fa-lg
				%input.input-form__fileselect-original{:type => "file", :id => "fileselect"}
			%input.input-form__send-button{:type => "submit", :value => "Send"}