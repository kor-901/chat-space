.side-bar
	.user-info
		%p.user-info__username
			= current_user.name
		%ul.user-info__button
			%li.user-info__button__list
				= link_to new_group_path, class: "user-info__button__list__link" do
					%i.fas.fa-edit
			%li.user-info__button__list
				= link_to edit_user_path(current_user), class: "user-info__button__list__link" do
					%i.fas.fa-cog
	.chat-groups
		- current_user.groups.each do |group|
			.group
				%p.group__name= group.name
